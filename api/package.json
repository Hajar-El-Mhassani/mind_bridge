{
  "name": "api",
  "private": true,
  "version": "1.0.0",
  "main": "src/index.js",
  "type": "module",
  "engines": {
    "node": "^20.12.1",
    "npm": "^10.5.0"
  },
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "format": "npx prettier . --write",
    "check": "npx eslint . --fix",
    "docker:start": "docker compose up -d db",
